# Application URLs
APP_URL=http://localhost:3000
BETTER_AUTH_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# The absolute url of the api endpoint of your bot (Production)
NEXT_PUBLIC_API_ENDPOINT=your_public_api_endpoint_here

# Discord OAuth Configuration
BOT_CLIENT_ID=your_discord_client_id_here
BOT_CLIENT_SECRET=your_discord_client_secret_here

# Database (MongoDB for better-auth)
DATABASE_URL=your_mongodb_connection_string

# Optional: Additional Bot Configuration
BOT_TOKEN=your_bot_token_here
FIRST_SUB_BOT_CLIENT_ID=your_first_sub_bot_client_id
SECOND_SUB_BOT_CLIENT_ID=your_second_sub_bot_client_id

# Optional: Other OAuth Providers
GITHUB_TOKEN=your_github_token_here

# Environment Configuration
NODE_ENV=development